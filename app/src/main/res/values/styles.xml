<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/ppwindow_show_anim</item>
        <item name="android:windowExitAnimation">@anim/ppwindow_hide_anim</item>
    </style>

    <!--无标题-->
    <!-- 按钮样式 -->
    <style name="btn_bg_and_text_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px85</item>
        <item name="android:textSize">@dimen/px28</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/zgq_btn_bg_selector</item>
        <item name="android:textColor">@drawable/zgq_btn_text_color</item>
    </style>
    <!--评分 星星-->

    <style name="RatingBarIndicatorFalse" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:isIndicator">false</item>
        <item name="android:minHeight">16dp</item>
    </style>

    <!--update_address-->
    <style name="Widget.LazyOrder.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="Widget.LazyOrder.Button" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/spacing_micro</item>
        <item name="android:paddingRight">@dimen/spacing_micro</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_blue_corners_button</item>
    </style>

    <!--欢迎页进度条-->
    <style name="Base.Progress.Small.Load" parent="@style/Base.Progress.Small">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateDrawable">@drawable/progress_rotate</item>
    </style>
    <style name="Base.Progress.Small" parent="@style/Base.Progress" />
    <style name="Base.Progress" parent="@style/Base" />
    <style name="Base" />

    <!--加载进度条-->
    <style name="Rewrite_Dialog_Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--登录输入框-->
    <style name="login_Input_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff333333</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbarstars</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>

    <!--送餐加载进度-->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="CommProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--天气-->

    <style name="HomeCustomButtonStyle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/home_text_color_dark</item>
        <item name="android:background">@drawable/line_button_bg</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25.0dip</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="home_aqi_item_left_text_style" parent="@style/home_aqi_item_text_style">
        <item name="android:textColor">@color/home_text_color_dark</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="home_aqi_item_right_text_style" parent="@style/home_aqi_item_text_style">
        <item name="android:textColor">@color/home_text_color</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="home_aqi_item_text_style">
        <item name="android:textSize">13.0sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
        <!--<item name="android:progressBackgroundTint">@color/white</item>-->
    </style>
</resources>