<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item
                android:left="4.0dip"
                android:top="4.0dip">
                <shape>
                    <solid android:color="#eeeeee"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_pressed="true">
        <layer-list>
            <item
                android:left="4.0dip"
                android:top="4.0dip">
                <shape>
                    <solid android:color="#eeeeee"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="1.0dip" android:right="4.0dip">
                <shape>
                    <solid android:color="#ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>