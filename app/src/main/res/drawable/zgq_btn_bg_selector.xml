<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <shape>

            <!-- 点击时按钮的背景颜色 -->
            <gradient android:angle="270" android:endColor="#FFE16C05" android:startColor="#FFE16C05" />
            <!-- 点击时按钮的边框颜色和宽度 -->
            <stroke android:width="1dp" android:color="@color/color_title" />
            <!-- 圆角>1的时候有圆角 -->
            <corners android:radius="5dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>

            <!-- 没有点击时按钮的背景颜色 -->
            <gradient android:angle="270" android:endColor="@color/color_title" android:startColor="@color/color_title" />
            <!-- 没有点击时按钮的边框颜色和宽度 -->
            <stroke android:width="0dp" android:color="#ffffff" />
            <!-- 圆角>1的时候有圆角 -->
            <corners android:radius="5dp" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="5.0dp" />
            <solid android:color="#969696" />

        </shape>
    </item>

</selector>
